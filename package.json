{
  "name": "chat-service-test-client",
  "version": "2.0.0",
  "description": "Command-line test client for ChatService with offline support",
  "main": "dist/chat-test-client.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/chat-test-client.js",
    "dev": "ts-node src/chat-test-client.ts",
    "test": "NODE_ENV=test ts-node src/chat-test-client.ts",
    "clean": "rm -rf dist",
    "setup": "npm install && npm run build"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.19.3",
    "axios": "^1.12.2",
    "chalk": "^4.1.2",
    "events": "^3.3.0",
    "socket.io-client": "^4.5.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/uuid": "^9.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
