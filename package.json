{
  "name": "myusta-chat-client",
  "version": "2.0.0",
  "description": "MyUsta Chat Service Test Client - Node.js and Web Browser",
  "main": "dist/chatClient.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/chatClient.js",
    "dev": "ts-node --esm src/chatClient.ts",
    "dev:test": "ts-node --esm src/chat-test-client.ts",
    "test": "npm run build && npm start",
    "clean": "rm -rf dist web/dist node_modules/.vite",
    "clean:all": "npm run clean && rm -rf node_modules",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,js,json}'",
    "type-check": "tsc --noEmit",
    "web:dev": "vite",
    "web:build": "npm run build && vite build",
    "web:preview": "vite preview",
    "web:clean": "rm -rf web/dist dist/web",
    "web:serve": "npm run web:build && npm run web:preview",
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') !== -1) throw new Error('Please use npm instead of yarn')\"",
    "postinstall": "npm run build",
    "validate": "npm run type-check && npm run lint && npm run format:check"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "dotenv": "^16.3.1",
    "events": "^3.3.0",
    "form-data": "^4.0.0",
    "readline": "^1.3.0",
    "socket.io-client": "^4.6.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-legacy": "^5.4.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "vite": "^5.4.20"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "chat",
    "websocket",
    "socket.io",
    "messaging",
    "real-time",
    "myusta"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/myusta/chat-client.git"
  },
  "bugs": {
    "url": "https://github.com/myusta/chat-client/issues"
  },
  "author": "MyUsta Team <dev@myusta.al>",
  "license": "MIT",
  "files": [
    "dist",
    "src",
    "web",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "restricted"
  }
}